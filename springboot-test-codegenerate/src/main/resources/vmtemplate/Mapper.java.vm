package ${package};

import java.util.List;
import org.apache.ibatis.annotations.Param;

/**
 * ${comments}数据库层接口
 *
 * @version v0.1, ${nowTime}, create by ${author}.
 */
public interface I${className}Mapper {

    /**
     * 通过主键查询单条数据
     *
     * @param ${pk.attrName}
     *            主键
     * @return 实例对象
     */
    ${className}DO selectById(${pk.attrType} ${pk.attrName});

    /**
     * 通过实体作为筛选条件查询集合
     *
     * @param ${classname}
     *            查询条件
     * @return 对象列表
     */
    List<${className}DO> selectList(@Param("dobj") ${className}DO ${classname});

    /**
     * 条件查询总条数
     *
     * @param ${classname}
     *            查询条件
     * @return 总条数
     */
    Long selectCount(@Param("dobj") ${className}DO ${classname});

    /**
     * 查询指定行数据
     *
     * @param ${classname}
     *            查询条件
     * @param startRow
     *            查询起始位置
     * @param pageSize
     *            每页查询条数
     * @return 对象列表
     */
    List<${className}DO> selectPages(@Param("dobj") ${className}DO ${classname}, @Param("startRow") int startRow, @Param("pageSize") int pageSize);

    /**
     * 选择性新增
     *
     * @param ${classname}
     *            实例对象
     * @return 影响行数
     */
    int insertBySelective(${className}DO ${classname});

    /**
     * 通过主键修改
     *
     * @param ${classname}
     *            实例对象
     * @return 影响行数
     */
    int updateById(${className}DO ${classname});

    /**
     * 通过主键删除数据
     *
     * @param ${pk.attrName}
     *            主键
     * @return 影响行数
     */
    int deleteById(${pk.attrType} ${pk.attrName});

}
